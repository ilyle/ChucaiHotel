<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img"
        android:background="@drawable/peoplepicture"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img"
        android:background="@color/black"
        android:id="@+id/view1"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/view1"
        android:text="ID:"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tex1"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/view1"
        android:layout_toRightOf="@id/tex1"
        android:background="@drawable/shape"
        android:text=""
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/id"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="修改"
        android:textSize="20sp"
        android:layout_below="@id/personinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bt_id"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tex1"
        android:background="@color/black"
        android:id="@+id/view2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@id/tex1"
        android:text="签名:"
        android:textSize="30sp"
        android:layout_alignLeft="@id/tex1"
        android:layout_marginTop="20dp"
        android:id="@+id/tex2"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/view2"
        android:layout_toRightOf="@id/tex2"
        android:background="@drawable/shape"
        android:text=""
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/qianming"
        />

