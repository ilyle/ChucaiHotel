<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/sale_rec"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_rec"
        app:layout_constraintTop_toBottomOf="@id/sale_rec"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>


    <TextView
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_18"
        android:textColor="#556A77"
        android:layout_marginLeft="@dimen/dp_37"
        android:text="入住时间"
        android:layout_height="@dimen/dp_40"/>

    <View
        android:id="@+id/bg_kuang"
        android:layout_width="@dimen/dp_471"
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        android:layout_marginTop="@dimen/dp_9"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_132"
        android:layout_height="@dimen/dp_40"/>



    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        android:layout_marginTop="@dimen/dp_9"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_132"
        android:layout_height="@dimen/dp_40">

        <LinearLayout
            android:id="@+id/day_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/day_start_time"
                android:textColor="#131415"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp_14"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/day_st_tv"
                android:layout_width="wrap_content"
                android:text="入住"
                android:textSize="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_3"
                android:textColor="#556A77"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/zhusuDay_tv"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:gravity="center"
                android:text="1"
                android:background="@android:color/black"
                android:paddingTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/day_end_time"
                android:textColor="#131415"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/day_en_tv"
                android:layout_width="wrap_content"
                android:text="离店"
                android:textSize="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_3"
                android:textColor="#556A77"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/red_btn"
                android:layout_width="wrap_content"
                android:src="@drawable/jian_nor"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:src="@drawable/jia_nor"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/zhu_su_tv"
        android:layout_width="@dimen/dp_200"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        android:layout_marginTop="@dimen/dp_9"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_59"
        android:layout_height="@dimen/dp_40"/>


    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        android:layout_marginTop="@dimen/dp_70"
        android:textColor="#556A77"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_37"
        android:text="房型选择"

        android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/room_rec"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/top_rec"
        android:layout_marginTop="@dimen/dp_105"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_height="@dimen/dp_500"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/beijingkuang"
        android:layout_marginBottom="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_21"

        app:layout_constraintRight_toLeftOf="@id/sub_order_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/dp_94">

        <TextView
            android:id="@+id/room_name"
            android:textSize="@dimen/sp_20"
            android:textColor="#131415"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ruzhu_message"
                android:textColor="#556A77"
                android:textSize="@dimen/sp_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_33"
                android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/ruzhu_price"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/room_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_30"
            android:textColor="#EF7561"
            android:layout_marginTop="@dimen/sp_18"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/sub_order_btn"
        android:layout_width="@dimen/dp_214"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_140"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/kuang_you"
        android:textSize="@dimen/sp_24"
        android:text="提交订单"

        android:textColor="@color/white"
        android:layout_height="@dimen/dp_94"/>

</android.support.constraint.ConstraintLayout>