<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:alpha="0.3"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_590"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/dp_615"/>




    <ImageView
        android:id="@+id/back_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_46"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="@dimen/dp_57"
        android:src="@drawable/fanhui_icon_w"
        android:layout_height="@dimen/dp_57"/>


    <TextView
        android:id="@+id/page_time_tv"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_116"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_14"
        android:textColor="@android:color/white"
        android:text="返回"
        android:textSize="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>