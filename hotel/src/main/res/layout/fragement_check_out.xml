<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/dp_590"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_height="@dimen/dp_710">



        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/xu_zhu_rb"
                android:layout_width="@dimen/dp_300"
                android:button="@null"
                android:textSize="@dimen/dp_30"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/dp_30"
                android:text="续住"
                android:layout_height="@dimen/dp_78"/>



            <RadioButton
                android:id="@+id/tui_fang_rb"
                android:layout_width="@dimen/dp_300"
                android:button="@null"
                android:textSize="@dimen/dp_30"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/dp_30"
                android:text="退房"
                android:layout_height="@dimen/dp_78"/>


        </RadioGroup>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_124"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/order_no_tv"
                android:layout_width="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/dp_21"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_542"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="@dimen/dp_81">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16"
                android:text="房间号"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room_num"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"

                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/room_type_name"
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_4"
                android:layout_toRightOf="@id/room_num"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/dp_12"
                android:textSize="@dimen/dp_12"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/dir"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_70"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/huan_fang_tv"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/room_num"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_18"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_27"
                android:text="换房"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>

            <LinearLayout
                android:id="@+id/ru_zhu_message"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                     <LinearLayout
                  android:layout_width="0px"
                  android:layout_weight="3"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">


                  <TextView
                      android:textColor="#D3D7D9"
                      android:textSize="@dimen/dp_18"
                      android:gravity="center"
                      android:layout_marginRight="@dimen/dp_27"
                      android:text="住客信息"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content" />

                  <TextView
                      android:id="@+id/name_tv"
                      android:textColor="#131415"
                      android:textSize="@dimen/dp_18"
                      android:gravity="center"
                      android:layout_marginLeft="@dimen/dp_15"
                      android:layout_marginRight="@dimen/dp_27"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content" />

              </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="#D3D7D9"
                        android:textSize="@dimen/dp_18"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/dp_27"
                        android:text="联系方式"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:id="@+id/phone_tv"
                        android:textColor="#131415"
                        android:textSize="@dimen/dp_18"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_27"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textColor="#D3D7D9"
                            android:textSize="@dimen/dp_18"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/dp_27"
                            android:text="房间规格"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <TextView
                            android:id="@+id/guige_tv"
                            android:textColor="#131415"
                            android:textSize="@dimen/dp_18"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_27"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textColor="#D3D7D9"
                            android:textSize="@dimen/dp_18"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/dp_27"
                            android:text="入住人数"

                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <TextView
                            android:id="@+id/people_tv"
                            android:textColor="#131415"
                            android:textSize="@dimen/dp_18"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_27"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">


            <com.xtf.xtflib.widget.NiceImageView.NiceImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_228"
                android:layout_height="@dimen/dp_149"/>

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pay_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">


          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_marginLeft="@dimen/dp_11"
              android:layout_marginTop="@dimen/sp_18"
              android:orientation="vertical"
              android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/code_image"
                  android:layout_width="@dimen/dp_144"
                  android:layout_height="@dimen/dp_144"/>

              <TextView
                  android:layout_width="@dimen/dp_144"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/dp_14"
                  android:text="打开微信扫一扫续住"
                  android:textColor="#333333"
                  android:layout_height="wrap_content"/>

          </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_411"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/sp_18"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="@dimen/dp_411"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_18"
                        android:text="续住时间"
                        android:layout_marginLeft="@dimen/dp_26"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_114"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/red_btn"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"/>

                        <TextView
                            android:id="@+id/num_tv"
                            android:layout_width="@dimen/dp_102"
                            android:gravity="center"
                            android:textSize="@dimen/dp_30"
                            android:textColor="#333333"
                            android:layout_height="@dimen/dp_45"/>

                        <TextView
                            android:id="@+id/add_btn"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_411"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_18"
                        android:text="入住时间"
                        android:layout_marginLeft="@dimen/dp_26"
                        android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/ruzhu_date"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/dp_20"
                            android:textColor="#131415"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_18"
                        android:text="离店时间"
                        android:layout_marginLeft="@dimen/dp_26"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lidian_date"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:textColor="#131415"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_6"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>

                <TextView
                    android:id="@+id/pay_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#999999"
                    android:text=""
                    android:layout_height="wrap_content"/>


                <LinearLayout
                   android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="实付RMB"
                        android:textColor="#131415"
                        android:textSize="@dimen/dp_17"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/money_tv"
                        android:layout_width="wrap_content"
                        android:textColor="#EF7561"
                        android:textSize="@dimen/dp_44"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="元"
                        android:textColor="#131415"
                        android:textSize="@dimen/dp_17"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ya_jin_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_18"
                android:textColor="#131313"
                android:text="住房押金"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ya_jin_price"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_36"
                android:textColor="#131313"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_height="wrap_content">


            </TextView>

            <Button
                android:id="@+id/tui_fang_btn"
                android:layout_width="@dimen/dp_120"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="确定退房"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>
        </RelativeLayout>



            </LinearLayout>




    </RelativeLayout>




</android.support.constraint.ConstraintLayout>