<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <TextView
        android:id="@+id/input_phone"
        android:layout_width="0px"
        android:gravity="center_vertical"
        android:background="@drawable/shurukuang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:paddingLeft="@dimen/dp_120"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_30"
        android:textColorHint="#BBBBBB"
        android:hint="请输入手机号码"

        android:layout_height="@dimen/dp_88"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/input_phone"
            android:layout_marginLeft="@dimen/dp_45"
            android:textColor="@android:color/black"
            android:text="+86"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_88"/>


        <ImageView
            android:id="@+id/delete_all"
            android:layout_width="@dimen/dp_57"
            app:layout_constraintTop_toTopOf="@id/input_phone"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_height="@dimen/dp_57"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_num"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_30"
        android:background="@drawable/shuzhikuang"
        app:layout_constraintTop_toBottomOf="@id/input_phone"
        android:layout_height="@dimen/dp_411"/>
    
    
    <ImageView
        android:id="@+id/hui_shan_btn"
        android:layout_width="@dimen/dp_172"
        app:layout_constraintRight_toRightOf="@id/rec_num"
        app:layout_constraintBottom_toBottomOf="@id/rec_num"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_53"
        android:layout_height="@dimen/dp_72"/>


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/dp_174"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rec_num"
        android:background="@drawable/queren_ann"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_height="@dimen/dp_68"/>

</android.support.constraint.ConstraintLayout>