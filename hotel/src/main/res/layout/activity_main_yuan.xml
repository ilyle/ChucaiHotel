<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ac.MainActivity_new">
            <!-- 设置没有指示器 -->
            <com.donkingliang.banner.CustomBanner
                android:id="@+id/banner"
                android:layout_width="0px"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="@dimen/dp_486"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:indicatorStyle="NONE"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/time_layout"
                android:layout_width="0px"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/tianqibeijing"
                android:layout_height="@dimen/dp_100">


                <ImageView
                    android:id="@+id/tianqi_icon"
                    android:layout_width="@dimen/dp_55"
                    android:src="@drawable/tianqi_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tian_qi_name"
                    app:layout_constraintLeft_toRightOf="@id/tianqi_icon"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_36"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/tianqi_icon"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="@android:color/white"/>



                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_39"
                    android:layout_marginRight="@dimen/dp_43"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_42"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </android.support.constraint.ConstraintLayout>



            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:textSize="@dimen/sp_42"
                android:textColor="#556A77"
                android:text="欢迎使用"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_40"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_28"

                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:layout_marginTop="@dimen/dp_98"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="福家智慧酒店自助入住系统"
                android:textColor="#556A77"
                android:textSize="@dimen/sp_41"
                android:layout_height="wrap_content"/>


            <com.xtf.xtflib.widget.bam.BamConstraintLayout
                android:id="@+id/xianchang_ruzhu_layout"
                android:layout_width="@dimen/dp_281"
                android:layout_marginTop="@dimen/dp_166"
                app:layout_constraintTop_toBottomOf="@id/banner"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/xianfangruzhu"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_height="@dimen/dp_188">


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_41"
                    android:textColor="@android:color/white"

                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="现房入住"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="Move in"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_height="wrap_content"/>


            </com.xtf.xtflib.widget.bam.BamConstraintLayout>


            <com.xtf.xtflib.widget.bam.BamConstraintLayout
                android:id="@+id/dingdan_ruzhu_layout"
                android:layout_width="@dimen/dp_281"
                android:layout_marginTop="@dimen/dp_166"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:background="@drawable/dingdanruzhu"
                app:layout_constraintLeft_toRightOf="@id/xianchang_ruzhu_layout"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_height="@dimen/dp_188">
                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_41"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="订单入住"

                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="Order check-in"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_height="wrap_content"/>


            </com.xtf.xtflib.widget.bam.BamConstraintLayout>

            <com.xtf.xtflib.widget.bam.BamConstraintLayout
                android:id="@+id/fangkedengji_layout"
                android:layout_width="@dimen/dp_281"
                android:layout_marginTop="@dimen/dp_367"
                app:layout_constraintTop_toBottomOf="@id/banner"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/fangkedengjix"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_height="@dimen/dp_188">


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_41"
                    android:textColor="@android:color/white"

                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="访客登记"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="Visitor registration"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_height="wrap_content"/>


            </com.xtf.xtflib.widget.bam.BamConstraintLayout>


            <com.xtf.xtflib.widget.bam.BamConstraintLayout
                android:id="@+id/xuzhujiezhang_layout"
                android:layout_width="@dimen/dp_281"
                android:layout_marginTop="@dimen/dp_367"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:background="@drawable/xuzhu_jiezhang"
                app:layout_constraintLeft_toRightOf="@id/xianchang_ruzhu_layout"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_height="@dimen/dp_188">
                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_41"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="续住/结账"

                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_31"
                    android:text="Continued to live/Check -out"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_height="wrap_content"/>
            </com.xtf.xtflib.widget.bam.BamConstraintLayout>


            <Button
                android:id="@+id/btn"
                android:layout_width="@dimen/dp_100"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/dp_100"/>

        </android.support.constraint.ConstraintLayout>





    </LinearLayout>

</ScrollView>