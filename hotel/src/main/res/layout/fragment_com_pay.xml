<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <View
        android:id="@+id/bg_view"
        android:layout_width="0px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/pay_beijin"
        android:layout_marginTop="@dimen/dp_76"
        android:layout_height="@dimen/dp_635"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_37"
        android:text="确认订单信息"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_24"
        android:layout_marginTop="@dimen/sp_24"
        android:text="房型信息"
        android:textColor="#999999"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        app:layout_constraintTop_toTopOf="@id/bg_view" />

    <com.xtf.xtflib.widget.NiceImageView.NiceImageView
        android:id="@+id/room_pic"
        android:layout_width="@dimen/dp_228"
        app:layout_constraintTop_toTopOf="@id/bg_view"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:layout_marginLeft="@dimen/sp_24"
        android:layout_marginTop="@dimen/dp_50"
        app:is_cover_src="false"
        app:corner_radius="@dimen/dp_3"
        android:layout_height="@dimen/dp_149"/>


    <TextView
        android:id="@+id/room_name"
        app:layout_constraintTop_toTopOf="@id/room_pic"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_18"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/room_space"
        app:layout_constraintTop_toBottomOf="@id/room_name"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#556A77"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/room_area"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_space"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_9"
        android:textSize="@dimen/sp_15"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/room_chuang"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_area"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_15"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/room_time"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_area"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_15"
        android:textColor="#EF7561"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/room_price"
        android:layout_width="wrap_content"
        android:textSize="@dimen/dp_30"
        android:textColor="#131415"
        android:visibility="visible"
        android:text="11111"
        app:layout_constraintTop_toBottomOf="@id/room_time"
        app:layout_constraintLeft_toRightOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/ru_shijian_tv"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:text="入住时间"
        android:layout_marginTop="@dimen/dp_56"
        android:textSize="@dimen/sp_18"
        android:textColor="#999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ruzhu_shuijian_tv"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        app:layout_constraintLeft_toRightOf="@id/ru_shijian_tv"
        android:textSize="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:textColor="#131415"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/time_space"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        app:layout_constraintLeft_toRightOf="@id/ruzhu_shuijian_tv"
        android:textSize="@dimen/dp_20"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_height="wrap_content"/>




    <TextView
        android:id="@+id/zhu_su_tv"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:text="住客信息"
        android:layout_marginTop="@dimen/dp_95"
        android:textSize="@dimen/sp_18"
        android:textColor="#999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/zhu_su_user"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@id/zhu_su_tv"
        android:layout_marginTop="@dimen/dp_95"
        android:textSize="@dimen/sp_20"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:text="手机号"
        android:layout_marginTop="@dimen/dp_135"
        android:textSize="@dimen/sp_18"
        android:textColor="#999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@id/zhu_su_tv"
        android:layout_marginTop="@dimen/dp_133"
        android:textSize="@dimen/sp_20"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/money_tv"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:text="金额"
        android:layout_marginTop="@dimen/dp_174"
        android:textSize="@dimen/sp_18"
        android:textColor="#999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_money"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@id/zhu_su_tv"
        android:layout_marginTop="@dimen/dp_172"
        android:textSize="@dimen/sp_20"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ya_jin_tv"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        android:text="客房押金"
        android:layout_marginTop="@dimen/dp_214"
        android:textSize="@dimen/sp_18"
        android:textColor="#999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_ya_jin"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_pic"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@id/zhu_su_tv"
        android:layout_marginTop="@dimen/dp_212"
        android:textSize="@dimen/sp_20"
        android:textColor="#131415"
        android:layout_height="wrap_content"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/money_layout"
        android:layout_width="@dimen/dp_566"
        android:layout_height="@dimen/dp_187"
        android:layout_marginLeft="@dimen/sp_24"
        android:layout_marginTop="@dimen/dp_250"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/bg_view"
        app:layout_constraintTop_toBottomOf="@id/room_pic">

        <ImageView
            android:id="@+id/code_image"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_10"
            android:text="打开微信扫一扫支付"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_image" />


        <TextView
            android:id="@+id/pay_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_100"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/code_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_123"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/code_image"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pay_ya_jin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_79"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_image" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_41"
            app:layout_constraintLeft_toRightOf="@id/code_image"
            app:layout_constraintTop_toTopOf="@id/code_image">
            <View
                android:id="@+id/logo_bg"
                android:layout_width="@dimen/dp_377"
                android:layout_height="@dimen/dp_81"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_14"
                android:text="房间号"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/room_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_31"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_36"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_41"
                android:padding="@dimen/dp_7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_15"
                app:layout_constraintLeft_toRightOf="@id/room_num"
                app:layout_constraintTop_toTopOf="parent" />





        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>





</android.support.constraint.ConstraintLayout>