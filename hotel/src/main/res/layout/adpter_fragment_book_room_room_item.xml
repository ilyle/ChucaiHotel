<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_303"
    android:layout_height="@dimen/dp_270"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.xtf.xtflib.widget.NiceImageView.NiceImageView
            android:id="@+id/room_image"
            android:layout_width="0px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_14"
            app:is_circle="false"
            app:corner_radius="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_height="@dimen/dp_180"/>


        <TextView
            android:id="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/room_image"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:textColor="#131415"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/detail"
            app:layout_constraintTop_toTopOf="@id/name"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:textColor="#556A77"
            android:textSize="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/price"
            app:layout_constraintTop_toBottomOf="@id/room_image"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="#131415"
            app:layout_constraintRight_toRightOf="parent"

            android:textSize="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="@dimen/dp_36"
            android:src="@drawable/xuanzhong_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_36"/>
</android.support.constraint.ConstraintLayout>